doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='icon', type='image/png', href='/img/logo.png')
    title #{title?title:'RAKUBUN（楽文） | 高性能AIライティングツール'} 
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
    link(rel='stylesheet', href='/css/style.css')
    link(rel='stylesheet', href='/css/mdb.min.css')
    link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css")
    script(src="https://js.stripe.com/v3/")
    script(src="/js/feather.min.js.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/showdown/1.9.1/showdown.min.js")
    script(src="https://code.jquery.com/jquery-3.6.0.min.js")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous")
  body
      if !user
        .top-nav
          nav.navbar.navbar-expand-md.navbar-white.bg-white
            .container-fluid
              a.navbar-brand(href='/')
                img.logo.mx-2(src='/img/logo.png', alt='ロゴ' style="max-width: 30px;")
                | RAKUBUN
              #navbarCollapse.collapse.navbar-collapse
                ul.navbar-nav.ms-auto.mb-2.mb-md-0
                  li.nav-item
                    if user
                      a.nav-link.btn.shadow-0(href="/user/setting") Settings
                    if user
                      li.nav-item
                          button.nav-link.btn.shadow-0(type='button', onclick='logout()') Logout
                    else
                      li.nav-item
                          a.nav-link.shadow-0(href='/user/login') Login
                      li.nav-item
                          a.btn.btn-outline-warning.btn-lg.shadow-0(href="/user/signup" role="button") Start Now For Free
      else 
        .top-nav.auto-hide
            nav.navbar.navbar-expand-md.navbar-white.bg-white.py-0
              .container-fluid.text-start.p-0(style="justify-content: flex-start !important;")
                button#sidebarMenuToggleSmall.btn.btn-dark.rounded-0.shadow-0.py-3(type="button")
                  i.fas.fa-bars
                a.navbar-brand(href='/')
                  img.logo.mx-2(src='/img/logo.png', alt='ロゴ' style="max-width: 30px;")
                  | RAKUBUN
      #back-alert.alert-container.container.position-relative(style="cursor:pointer")
        if messages.error
          .alert.alert-danger.position-fixed.top-0.border.border-danger.shadow(style="z-index: 1000;")
            each msg in messages.error
              span #{msg}
        if messages.success
          .alert.alert-success.position-fixed.top-0.border.border-success.shadow(style="z-index: 1000;")
            each msg in messages.info
              span #{msg}
      #front-alert.alert-container.container.position-relative(style="cursor:pointer;")
          .alert.alert-danger.position-fixed.top-0.border.border-danger.shadow(style="z-index: 1000;display:none")
          .alert.alert-success.alert-success.position-fixed.top-0.border.border-success.shadow(style="z-index: 1000;display:none")
      block content
      script(src='/js/mdb.min.js ')
      script(src='/js/popper.min.js')
      script(src='/js/category.js')
      script(src='/js/script.js')
      script(src='/js/openai.js')
