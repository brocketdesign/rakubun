                $.ajax({
                    type: 'POST',
                    url: '/api/autoblog/bot-start',
                    data: JSON.stringify({ botId: botId }),
                    contentType: 'application/json',
                    success: function(response) {
                        if (typeof callback === 'function') {
                            callback();
                        }
                    },
                    error: function(xhr, status, error) {
                        console.error('Error:', error);
                        if (typeof callback === 'function') {
                            callback();
                        }
                    }
                });
            }
