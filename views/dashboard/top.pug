extends base

block mainContent
    h2.fw-bold ホーム
    hr.my-4
    
    section.my-5
        .row.row-cols-1.row-cols-md-3.my-5
            .col.mb-3.d-none
                a.card.btn.bg-white.px-2(href=`/dashboard/app/rss`)
                    .card-body.row.justify-start.items-start.px-2
                        div.col-2.d-flex.align-items-center
                            i.fab.fa-wordpress.mr-3.display-6
                        div.col-10
                            h5.card-title.fw-bold.text-start
                                | RSS
                            p.card-text.text-start.text-muted
                                | RSS - Wordpress
            .col.mb-3
                a.card.btn.bg-white.px-2(href=`/dashboard/app/autoblog`)
                    .card-body.row.justify-start.items-start.px-2
                        div.col-2.d-flex.align-items-center
                            i.fab.fa-wordpress.mr-3.display-6
                        div.col-10
                            h5.card-title.fw-bold.text-start
                                | autoblog
                            p.card-text.text-start.text-muted
                                | autoblog - Wordpress
                                
        .row.row-cols-1.row-cols-md-2.my-5
            .col
                h5.fw-bold
                    i.fas.fa-bell.me-2
                    | ニュース
                if latestNews
                    .news-item.mt-3
                        .news-date.text-muted
                            | #{latestNews.date}
                        .news-content
                            | #{latestNews.content}
                else
                    p.text-muted.mt-3.px-3 今は何もありません。
            .col 
                h5.fw-bold
                    i.fas.fa-cogs.me-2
                    | 設定とサポート
                .row.row-cols-1.row-cols-md-2.my-3
                    .col.my-1
                        a.btn.btn-primary.w-100(href="/user/setting") アカウント設定
                    .col.my-1
                        a.btn.btn-primary.w-100(href="/about-us") 会社概要
                    .col.my-1
                        a.btn.btn-outline-primary.w-100(href="#") 使い方ガイド
                    .col.my-1
                        a.btn.btn-outline-primary.w-100(href="/contact") お問い合わせ
