extends base

block mainContent
    h2.fw-bold Home
    hr.my-4
    
    section.my-5
        .row.row-cols-1.row-cols-md-3.my-5
            .col.mb-3
                a.card.btn.bg-white.px-2(href=`/dashboard/app/titlegenerator`)
                    .card-body.row.justify-start.items-start.px-2
                        div.col-2.d-flex.align-items-center
                            i.fas.fa-heading.mr-3.display-6
                        div.col-10
                            h5.card-title.fw-bold.text-start
                                | タイトル生成ツール
                            p.card-text.text-start.text-muted
                                | SEO対応のタイトル生成ツール
            .col.mb-3
                a.card.btn.bg-white.px-2(href=`/dashboard/app/sectiongenerator`)
                    .card-body.row.justify-start.items-start.px-2
                        div.col-2.d-flex.align-items-center
                            i.fas.fa-heading.mr-3.display-6
                        div.col-10
                            h5.card-title.fw-bold.text-start
                                | Section生成ツール
                            p.card-text.text-start.text-muted
                                | SEO対応のSection生成ツール
            .col.mb-3
                a.card.btn.bg-white.px-2(href=`/dashboard/app/articlegenerator`)
                    .card-body.row.justify-start.items-start.px-2
                        div.col-2.d-flex.align-items-center
                            i.fas.fa-heading.mr-3.display-6
                        div.col-10
                            h5.card-title.fw-bold.text-start
                                | Article生成ツール
                            p.card-text.text-start.text-muted
                                | SEO対応のArticle生成ツール
        .row.row-cols-1.row-cols-md-2.my-5
            .col
                h5.fw-bold
                    i.fas.fa-bell.me-2
                    | News
                if latestNews
                    .news-item.mt-3
                        .news-date.text-muted
                            | #{latestNews.date}
                        .news-content
                            | #{latestNews.content}
                else
                    p.text-muted.mt-3.px-3 Nothing new for now.
            .col 
                h5.fw-bold
                    i.fas.fa-cogs.me-2
                    | Settings and Support
                .row.row-cols-1.row-cols-md-2.my-3
                    .col.my-1
                        a.btn.btn-primary.w-100(href="/user/setting") Account Parameters
                    .col.my-1
                        a.btn.btn-primary.w-100(href="/about-us") About Us
                    .col.my-1
                        a.btn.btn-outline-primary.w-100(href="#") How to use ?
                    .col.my-1
                        a.btn.btn-outline-primary.w-100(href="/contact") Contact Us