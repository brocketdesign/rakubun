{
  "crons": [
    {
      "path": "/api/cron-execute",
      "schedule": "*/30 * * * *"
    }
  ],
  "rewrites": [
    { "source": "/api/stripe/:action", "destination": "/api/stripe?_action=:action" },
    { "source": "/api/agent/:action", "destination": "/api/agent?_action=:action" },
    { "source": "/api/articles/:action", "destination": "/api/articles?_action=:action" },
    { "source": "/api/cron-jobs/:action", "destination": "/api/cron-jobs?_action=:action" },
    { "source": "/api/notifications/:action", "destination": "/api/notifications?_action=:action" },
    { "source": "/api/research/:action", "destination": "/api/research?_action=:action" },
    { "source": "/api/schedules/:action", "destination": "/api/schedules?_action=:action" },
    { "source": "/api/sites/:id/:subaction", "destination": "/api/sites?_id=:id&_subaction=:subaction" },
    { "source": "/api/sites/:action", "destination": "/api/sites?_action=:action" },
    { "source": "/api/analytics/oauth/callback", "destination": "/api/analytics?_action=oauth/callback" },
    { "source": "/api/analytics/oauth-init", "destination": "/api/analytics?_action=oauth-init" },
    { "source": "/api/analytics/oauth", "destination": "/api/analytics?_action=oauth" },
    { "source": "/api/analytics/:action", "destination": "/api/analytics?_action=:action" },
    { "source": "/(.*)", "destination": "/" }
  ]
}
